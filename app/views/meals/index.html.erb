<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date eaten</th>
      <th>Meal type</th>
      <th>Calories</th>
      <th>Notes</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.title %></td>
        <td><%= meal.date_eaten %></td>
        <td><%= meal.meal_type %></td>
        <td><%= meal.calories %></td>
        <td><%= meal.notes %></td>
        <td><%= meal.picture %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

